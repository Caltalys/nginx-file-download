<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.persist.must.AdminAccountRMapper">

	<sql id="columns">created_at, updated_at, enabled, id, name,
		role_id
	</sql>

	<resultMap type="com.example.domain.Account" id="resultMap">
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<!-- -->
		<result property="roleId" column="role_id" />
	</resultMap>

	<select id="selectAll" resultMap="resultMap">
		SELECT
		<include refid="columns" />
		FROM account
		ORDER BY created_at DESC, id DESC
	</select>
	
	<select id="selectById" parameterType="long" resultMap="resultMap">
		SELECT
		<include refid="columns" />
		FROM account
		WHERE id=#{id}
	</select>

</mapper>